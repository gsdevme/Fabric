{
  "name": "gsdev/fabric",
  "description": "Fabric is a set of interfaces, traits and simple classes to help structure libraries and code that interact with APIs.",
  "autoload": {
    "psr-4": {
      "Gsdev\\Fabric\\": [
        "src/Fabric"
      ]
    },
    "autoload-dev": {
      "psr-4": {
        "Gsdev\\Fabric\\Test\\": [
          "tests/"
        ]
      }
    }
  },
  "require": {
    "psr/http-message": "^1.0",
    "guzzlehttp/psr7": "^1.0"
  },
  "suggest": {
    "guzzlehttp/guzzle": "If you want to use the Guzzle client"
  },
  "require-dev": {
    "phpunit/phpunit": "^6.0",
    "phpmd/phpmd": "^2.6",
    "guzzlehttp/guzzle": "^6.0",
    "phpstan/phpstan": "^0.6.0",
    "squizlabs/php_codesniffer": "3.0.0RC4",
    "mockery/mockery": "dev-master as 1.0"
  }
}
